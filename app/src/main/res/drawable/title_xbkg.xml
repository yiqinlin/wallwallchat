<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!-- 圆角 -->
            <corners
                android:radius="7dp"/><!-- 设置圆角半径 -->
            <!-- 间隔 -->
            <padding
                android:left="5dp" android:top="0dp" android:right="5dp" android:bottom="0dp"/><!-- 各方向的间隔 -->
            <!-- 填充 -->
            <solid
                android:color="@color/themeColor"/><!-- 填充的颜色 -->
        </shape>
    </item>
</selector>
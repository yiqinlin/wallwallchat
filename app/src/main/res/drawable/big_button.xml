<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"> <!-- pressed the button status -->
        <shape>
            <solid android:color="@color/themeColorDark" />
            <!-- //渐变方向     按钮边缘="" 边缘宽="" -->
            <stroke android:width="1sp" android:color="@color/themeColor" />
            <!-- //边缘颜色   按钮四个圆角="" -->
            <corners android:radius="10dp" />
            <!-- //半径    内边距="" 按钮文字和边缘距离="" -->
        </shape>
    </item>

    <item > <!-- no focus the button status(the normal status button) -->
        <shape>
            <solid android:color="@color/themeColor"/>
            <corners android:radius="10dp" />
        </shape>
    </item>

</selector>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginTop="14dp"
    android:layout_height="40dp">
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">
        <com.stark.wallwallchat.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:id="@+id/list_info_ordinary_head" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top"
            android:textColor="@android:color/black"
            android:text="易寝林"
            android:id="@+id/list_info_ordinary_nick"
            android:textSize="@dimen/text_size"
            android:clickable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="20:30"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/list_info_time"
            android:textSize="@dimen/text_size_xsmall"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="7dp"
        android:gravity="center">
        <com.stark.wallwallchat.CircleImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/wall_more"
            android:id="@+id/list_info_ordinary_more"/>
    </LinearLayout>
</LinearLayout>
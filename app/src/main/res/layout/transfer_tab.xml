<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/list_driver_dark" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/magic_7margin"
        android:orientation="horizontal"
        android:background="#f5f5f5">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_tab_left"
            android:background="@drawable/theme_transfer_tab_group_nor"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_tab_mid"
            android:background="@drawable/theme_transfer_tab_message_focused"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_tab_right"
            android:background="@drawable/theme_transfer_tab_me_nor"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <com.stark.yiyu.toast.ListAnimImageView
        android:layout_width="@dimen/magic_4margin"
        android:layout_height="@dimen/magic_4margin"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/magic_margin"
        android:layout_marginBottom="@dimen/magic_0.5margin"
        android:src="@drawable/loading_progress_grey_rotate"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/refresh_head_text"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/magic_margin"
        android:textSize="@dimen/text_size_small"
        android:textColor="@android:color/secondary_text_dark"
        android:text="加载中" />
</LinearLayout>
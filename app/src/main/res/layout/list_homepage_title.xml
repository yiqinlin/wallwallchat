<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@android:color/holo_green_dark">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_marginTop="42dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="@dimen/magic_2margin"
                android:textColor="@android:color/black"
                android:background="@null"
                android:textSize="@dimen/text_size_sbig"
                android:id="@+id/list_homepage_nick"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingBottom="@dimen/magic_2margin"
                android:textColor="@android:color/darker_gray"
                android:background="@null"
                android:textSize="@dimen/text_size_xmid"
                android:id="@+id/list_homepage_auto"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside">
            <com.stark.wallwallchat.CircleImageView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:id="@+id/list_homepage_head"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/item">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/magic_2margin"
        android:layout_marginBottom="@dimen/magic_2margin"
        android:layout_marginLeft="@dimen/magic_2margin"
        android:layout_weight="2"
        android:singleLine="true"
        android:gravity="center_vertical|start"
        android:textSize="@dimen/text_size"
        android:textColor="@android:color/black"
        android:id="@+id/list_txv_left"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <EditText
            android:id="@+id/list_edt_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/text_size"
            android:textCursorDrawable="@drawable/cursor_bkg"
            android:textColor="@android:color/black"/>
    </LinearLayout>
</LinearLayout>
